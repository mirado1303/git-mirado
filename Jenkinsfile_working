pipeline {
    agent any
	tools {
		maven 'Maven'
	}
	
	environment {
		dockerImage =''
		registry = "mirado1303/jenkins-docker-k8s-projet" 
	        registryCredential = 'dockerhub' 
			
	}
	
    stages {
	    stage('Scm Checkout') {
		    steps {
			    checkout scm
		    }
	    }
	    
	    stage('Build') {
		    steps {
			    sh 'mvn clean package'
		    }
	    }
	    
	    
	    
	    stage('Building our image') { 
            	steps { 
                	script { 
                    		dockerImage = docker.build registry + ":$BUILD_NUMBER" 
                	}
            	} 
           }
	    
	    
	   
    }
}
